@model DiretorViewModel;


<p>Adicionando Diretor</p>

<form method="post" asp-controller="Diretores" asp-action="CreatePost">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" name="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" name="DataNascimento" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Adicinar</button>
    <a asp-controller="Diretores" asp-action="Index" class="btn btn-info">Listagem</a>
</form>