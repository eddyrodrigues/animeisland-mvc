@model AnimeViewModel

<div class="row">
    <div class="container">
        <h2>Detalhes do Anime: @Model.Titulo</h2>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Nome: <span class="text-black-50">@Model.Titulo</span> </h5>
                <p class="card-text">Sinopse: @Model.Sinopse</p>
            </div>
        </div>

        <a class="btn btn-primary mt-3" asp-controller="Animes" asp-action="Index">Voltar para a lista de Animes</a>
    </div>
</div>
